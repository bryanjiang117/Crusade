{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "--platform",
        "linux/amd64",
        "-t",
        "gcr.io/$PROJECT_ID/crusader:$COMMIT_SHA",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "tag",
        "crusader",
        "gcr.io/$PROJECT_ID/crusader:$COMMIT_SHA"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "gcr.io/$PROJECT_ID/crusader:$COMMIT_SHA"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "args": [
        "run",
        "deploy",
        "crusader",
        "--image",
        "gcr.io/$PROJECT_ID/crusader:$COMMIT_SHA",
        "--region",
        "northamerica-northeast2"
      ]
    }
  ],
  "images": [
    "gcr.io/$PROJECT_ID/crusader:$COMMIT_SHA"
  ],
  "options": {
    "logging": "CLOUD_LOGGING_AND_STORAGE",
    "logsBucket": "gs://gen-lang-client-0705055066_cloudbuild"
  }
}
